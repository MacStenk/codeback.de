---
// ReadingTime.astro - Automatische Lesezeitberechnung
interface Props {
  content: string;
  wordsPerMinute?: number;
}

const { content, wordsPerMinute = 200 } = Astro.props;

// Wörter zählen (text ohne HTML tags)
const text = content.replace(/<[^>]*>/g, '');
const words = text.trim().split(/\s+/).length;
const minutes = Math.ceil(words / wordsPerMinute);
---

<span class="reading-time text-zinc-500 text-sm flex items-center gap-1">
  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
  </svg>
  <span>{minutes} Min. Lesezeit</span>
</span>
