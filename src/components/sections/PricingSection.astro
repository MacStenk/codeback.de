---
// PricingSection.astro - Packages & Pricing
import Button from '../Button.astro';

interface Props {
  data: {
    headline: string;
    subheadline: string;
    statusBadge: {
      launchDate: string;
      slotsTotal: number;
      slotsTaken: number;
    };
    packages: Array<{
      icon: string;
      name: string;
      price: number;
      deliveryTime: string;
      featured: boolean;
      features: string[];
      buttonText: string;
    }>;
    faqs: Array<{
      question: string;
      answer: string;
    }>;
  };
}

const { data } = Astro.props;
---

<section id="loesung" class="mb-24">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold mb-4">{data.headline}</h2>
    <p class="text-xl text-zinc-600 mb-8">
      {data.subheadline}
    </p>

    <!-- Status Badge -->
    <div class="inline-flex items-center gap-3 bg-green-50 border border-green-200 rounded-full px-6 py-3">
      <div class="flex items-center gap-2">
        <div class="flex gap-1">
          {Array.from({ length: data.statusBadge.slotsTotal }).map((_, i) => (
            <div class={`w-3 h-3 rounded-full ${i < data.statusBadge.slotsTaken ? 'bg-green-600' : 'bg-zinc-300'}`}></div>
          ))}
        </div>
        <span class="text-sm font-medium text-zinc-700">
          {data.statusBadge.launchDate}
        </span>
      </div>
      <span class="text-sm font-semibold text-green-700">
        {data.statusBadge.slotsTaken} von {data.statusBadge.slotsTotal} Slots belegt
      </span>
    </div>
  </div>

  <!-- Pricing Cards -->
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 max-w-6xl mx-auto">

    {data.packages.map(pkg => (
      <div class={`border-2 rounded-lg p-6 sm:p-8 ${
        pkg.featured
          ? 'border-green-500 bg-green-50 relative lg:transform lg:scale-105 shadow-lg sm:col-span-2 lg:col-span-1'
          : 'border-zinc-200 bg-white hover:border-zinc-300 transition sm:col-span-2 lg:col-span-1'
      }`}>
        {pkg.featured && (
          <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-green-600 text-white text-xs font-bold px-4 py-1 rounded-full">
            EMPFOHLEN
          </div>
        )}

        <div class="text-4xl mb-4">{pkg.icon}</div>
        <h3 class="text-2xl font-bold mb-2">{pkg.name}</h3>
        <div class="mb-6">
          <div class="text-4xl font-bold text-zinc-900">{pkg.price.toLocaleString('de-DE')}€</div>
          <div class="text-sm text-zinc-500">{pkg.deliveryTime}</div>
        </div>

        <ul class="space-y-3 mb-8">
          {pkg.features.map(feature => (
            <li class="flex items-start gap-2">
              <span class="text-green-600 mt-1">✓</span>
              <span class="text-sm text-zinc-700">{feature}</span>
            </li>
          ))}
        </ul>

        <Button
          href="#kontakt"
          variant={pkg.featured ? 'primary' : 'dark'}
          class="w-full justify-center"
        >
          {pkg.buttonText}
        </Button>
      </div>
    ))}

  </div>

  <!-- FAQ -->
  <div class="mt-16 max-w-3xl mx-auto">
    <h3 class="text-xl font-bold mb-6 text-center">Häufige Fragen</h3>

    <div class="space-y-4">
      {data.faqs.map(faq => (
        <details class="bg-zinc-50 border border-zinc-200 rounded-lg p-6 cursor-pointer">
          <summary class="font-semibold">
            {faq.question}
          </summary>
          <p class="text-zinc-600 mt-3 text-sm" style="white-space: pre-line">
            {faq.answer}
          </p>
        </details>
      ))}
    </div>
  </div>
</section>
