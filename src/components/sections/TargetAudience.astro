---
// ═══════════════════════════════════════════════════════
// TARGET AUDIENCE COMPONENT - Zielgruppen Section
// ═══════════════════════════════════════════════════════
// Props-based component for TinaCMS blocks system
// Design preserved 100% - only data source changed
// Template-ready: Yes - Reusable for customer sites
// ═══════════════════════════════════════════════════════

interface Props {
  data: {
    headline: string;
    subheadline: string;
    audiences: Array<{
      icon: string;
      title: string;
      description: string;
      bulletPoint: string;
    }>;
    stats: Array<{
      value: string;
      description: string;
    }>;
    earlyMover: {
      title: string;
      text: string;
    };
  }
}

const { data } = Astro.props;
---

<section class="mb-24 bg-zinc-50 -mx-6 px-6 py-12 rounded-lg">
  <h2 class="text-3xl font-bold mb-8">{data.headline}</h2>

  <p class="text-lg text-zinc-600 mb-8">
    {data.subheadline}
  </p>

  <div class="grid sm:grid-cols-2 gap-6 sm:gap-8">
    {data.audiences.map((audience) => (
      <div class="bg-white border border-zinc-200 rounded-lg p-6">
        <div class="text-3xl mb-3">{audience.icon}</div>
        <h3 class="text-xl font-semibold mb-3">{audience.title}</h3>
        <p class="text-zinc-600 mb-4">
          {audience.description}
        </p>
        <p class="text-sm text-green-600 font-medium">
          {audience.bulletPoint}
        </p>
      </div>
    ))}
  </div>

  <!-- Stats -->
  <div class="mt-12 grid grid-cols-2 sm:grid-cols-3 gap-4 sm:gap-6">
    {data.stats.map((stat, index) => (
      <div class={`text-center ${index === 2 ? 'col-span-2 sm:col-span-1' : ''}`}>
        <div class="text-3xl font-bold text-green-600 mb-2" set:html={stat.value}></div>
        <p class="text-sm text-zinc-600">
          {stat.description}
        </p>
      </div>
    ))}
  </div>

  <!-- Early Mover Advantage -->
  <div class="mt-8 bg-green-100 border border-green-300 rounded-lg p-6">
    <h4 class="font-semibold text-green-900 mb-2">{data.earlyMover.title}</h4>
    <p class="text-sm text-green-800">
      {data.earlyMover.text}
    </p>
  </div>
</section>
