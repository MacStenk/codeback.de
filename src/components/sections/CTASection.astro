---
// CTASection.astro - Final Call to Action
import Button from '../Button.astro';

interface Props {
  data: {
    headline: string;
    description: string;
    primaryButton: {
      text: string;
      href: string;
    };
    secondaryButton: {
      text: string;
      href: string;
    };
    blogLinks: {
      title: string;
      links: string[];
    };
    footer: {
      line1: string;
      line2: string;
    };
  };
}

const { data } = Astro.props;
---

<section id="kontakt" class="border-t border-zinc-200 pt-12">
  <div class="bg-gradient-to-br from-green-50 to-blue-50 rounded-lg p-8 border border-green-200">
    <h2 class="text-3xl font-bold mb-4">{data.headline}</h2>
    <p class="text-lg text-zinc-700 mb-6">
      {data.description}
    </p>

    <div class="flex gap-4 items-center flex-wrap mb-8">
      <Button href={data.primaryButton.href} variant="primary">
        {data.primaryButton.text}
      </Button>
      <Button href={data.secondaryButton.href} variant="ghost">
        {data.secondaryButton.text}
      </Button>
    </div>

    <div class="border-t border-green-200 pt-6 mt-6">
      <h3 class="font-semibold mb-3 text-zinc-900">{data.blogLinks.title}</h3>
      <ul class="space-y-2 text-sm text-zinc-700">
        {data.blogLinks.links.map(link => (
          <li class="flex items-start gap-2">
            <span class="text-green-600 mt-1">â†’</span>
            <span>{link}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>

  <!-- Footer-Info -->
  <div class="mt-8 text-center text-sm text-zinc-500">
    <p class="mb-2">{data.footer.line1}</p>
    <p>{data.footer.line2}</p>
  </div>
</section>
