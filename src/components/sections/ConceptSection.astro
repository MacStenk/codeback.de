---
// ConceptSection.astro - Was CodeBack anders macht

interface Props {
  data: {
    headline: string;
    description: string;
    pillars: Array<{
      number: number;
      title: string;
      description: string;
      technicalLabel: string;
      technicalDetails: string;
    }>;
    techComparison: {
      title: string;
      subtitle: string;
      pagebuilderLabel: string;
      pagebuilderText: string;
      codebackLabel: string;
      codebackText: string;
    };
    practiceExample: {
      title: string;
      description: string;
      highlight: string;
    };
  };
}

const { data } = Astro.props;
---

<section id="konzept" class="mb-24">
  <h2 class="text-3xl font-bold mb-8">{data.headline}</h2>

  <p class="text-lg text-zinc-600 mb-12">
    {data.description}
  </p>

  <!-- 3 SÃ¤ulen -->
  <div class="grid md:grid-cols-3 gap-8">
    {data.pillars.map(pillar => (
      <div class="bg-zinc-50 border border-zinc-200 rounded-lg p-6">
        <div class="w-12 h-12 bg-green-600 rounded-full flex items-center justify-center text-white text-2xl mb-4">
          {pillar.number}
        </div>
        <h3 class="text-xl font-semibold mb-3">{pillar.title}</h3>
        <p class="text-zinc-600 text-sm mb-4">
          {pillar.description}
        </p>
        <div class="bg-white border border-zinc-200 rounded p-3">
          <p class="text-xs text-zinc-500 mb-2">{pillar.technicalLabel}</p>
          <p class="text-sm text-zinc-700" style="white-space: pre-line">
            {pillar.technicalDetails}
          </p>
        </div>
      </div>
    ))}
  </div>

  <!-- Tech vs. Pagebuilder -->
  <div class="mt-12 bg-gradient-to-br from-zinc-900 to-zinc-800 text-white rounded-lg p-8">
    <h4 class="text-xl font-semibold mb-2">{data.techComparison.title}</h4>
    <p class="text-zinc-400 text-sm mb-6">
      {data.techComparison.subtitle}
    </p>
    <div class="grid md:grid-cols-2 gap-6">
      <div>
        <p class="font-medium text-red-400 mb-2">{data.techComparison.pagebuilderLabel}</p>
        <p class="text-zinc-300 text-sm">
          {data.techComparison.pagebuilderText}
        </p>
      </div>
      <div>
        <p class="font-medium text-green-400 mb-2">{data.techComparison.codebackLabel}</p>
        <p class="text-zinc-300 text-sm">
          {data.techComparison.codebackText}
        </p>
      </div>
    </div>
  </div>

  <!-- Praxisbeispiel -->
  <div class="mt-12 bg-green-50 border border-green-200 rounded-lg p-8">
    <h4 class="text-xl font-semibold mb-4">{data.practiceExample.title}</h4>
    <p class="text-zinc-700 mb-4">
      {data.practiceExample.description}
    </p>
    <p class="text-green-800 font-medium">
      {data.practiceExample.highlight}
    </p>
  </div>
</section>
