---
// LiveDemo.astro - Live-Demo: So liest KI diese Seite

interface Props {
  data: {
    headline: string;
    description: string;
    demoItems: Array<{
      label: string;
      value: string;
      technical: string;
      color: string;
    }>;
    chatResponse: {
      intro: string;
      main: string;
      footer: string;
    };
    comparison: {
      withoutTitle: string;
      withoutText: string;
      withTitle: string;
      withText: string;
    };
    cta: {
      headline: string;
      description: string;
      buttonText: string;
      buttonLink: string;
      note: string;
    };
  };
}

const { data } = Astro.props;

const colorMap: Record<string, string> = {
  green: 'border-green-500',
  blue: 'border-blue-500',
  purple: 'border-purple-500',
  orange: 'border-orange-500',
};
---

<section class="mb-24 bg-gradient-to-br from-green-50 to-blue-50 -mx-6 px-6 py-12 rounded-lg border border-green-100">
  <h2 class="text-3xl font-bold mb-8">{data.headline}</h2>

  <p class="text-zinc-600 mb-8">
    {data.description}
  </p>

  <div class="bg-white border border-zinc-200 rounded-lg p-6 mb-6">
    <h3 class="font-semibold mb-4 flex items-center gap-2">
      <span class="text-green-600">ðŸ¤–</span>
      Was KI extrahieren kann
    </h3>

    <div class="space-y-4 text-sm">
      {data.demoItems.map(item => (
        <div class={`border-l-4 ${colorMap[item.color]} pl-4`}>
          <p class="font-medium mb-1">{item.label}</p>
          <p class="text-zinc-600">{item.value}</p>
          <p class="text-xs text-zinc-500 mt-1">{item.technical}</p>
        </div>
      ))}
    </div>
  </div>

  <div class="bg-zinc-900 text-zinc-100 rounded-lg p-6">
    <p class="text-sm text-zinc-400 mb-2">{data.chatResponse.intro}</p>
    <p class="text-green-400 mb-4">
      {data.chatResponse.main}
    </p>
    <p class="text-sm text-zinc-400">
      {data.chatResponse.footer}
    </p>
  </div>

  <!-- Vergleich -->
  <div class="mt-8 grid md:grid-cols-2 gap-6">
    <div class="bg-red-50 border border-red-200 rounded-lg p-6">
      <h4 class="font-semibold text-red-900 mb-3">{data.comparison.withoutTitle}</h4>
      <p class="text-sm text-zinc-700 mb-3">
        {data.comparison.withoutText}
      </p>
      <p class="text-xs text-red-800 font-medium">
        â†’ Wird nicht empfohlen
      </p>
    </div>

    <div class="bg-green-50 border border-green-500 rounded-lg p-6">
      <h4 class="font-semibold text-green-900 mb-3">{data.comparison.withTitle}</h4>
      <p class="text-sm text-zinc-700 mb-3">
        {data.comparison.withText}
      </p>
      <p class="text-xs text-green-800 font-medium">
        â†’ Wird mit Details zitiert
      </p>
    </div>
  </div>

  <!-- CTA zum Checker -->
  <div class="mt-8 bg-zinc-900 text-white rounded-lg p-6 text-center">
    <p class="text-lg mb-4">
      <span class="text-green-400 font-semibold">{data.cta.headline}</span><br/>
      {data.cta.description}
    </p>
    <a
      href={data.cta.buttonLink}
      class="inline-block bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition"
    >
      {data.cta.buttonText}
    </a>
    <p class="text-xs text-zinc-400 mt-3">{data.cta.note}</p>
  </div>
</section>
