---
// Hero.astro - Homepage Hero Section
import Button from '../Button.astro';

interface Props {
  data: {
    badge: string;
    headline: string;
    highlightText: string;
    description: string;
    primaryButton: {
      text: string;
      href: string;
    };
    secondaryButton: {
      text: string;
      href: string;
    };
    trustBadge: string;
  };
}

const { data } = Astro.props;
---

<header class="mb-24">
  <div class="inline-block mb-6">
    <span class="text-sm font-medium text-green-600 bg-green-50 px-3 py-1 rounded-full">
      {data.badge}
    </span>
  </div>

  <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
    {data.headline}<br/>
    <span class="text-green-600">{data.highlightText}</span> – nicht dich
  </h1>

  <p class="text-xl text-zinc-600 mb-8 leading-relaxed max-w-2xl">
    {data.description}
  </p>

  <div class="flex gap-4 items-center flex-wrap">
    <Button href={data.primaryButton.href} variant="primary">
      {data.primaryButton.text}
    </Button>
    <Button href={data.secondaryButton.href} variant="ghost">
      {data.secondaryButton.text}
    </Button>
  </div>

  <!-- Trust Badge unter Buttons -->
  <div class="mt-6 flex items-center gap-2 text-sm text-zinc-500">
    <span>⚡</span>
    <span>{data.trustBadge}</span>
  </div>
</header>
