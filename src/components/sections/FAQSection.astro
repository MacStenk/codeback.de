---
// FAQSection.astro - Häufig gestellte Fragen

interface Props {
  data: {
    headline: string;
    faqs: Array<{
      question: string;
      answer: string;
    }>;
    ctaBox: {
      title: string;
      description: string;
      buttonText: string;
      buttonLink: string;
      note: string;
    };
  };
}

const { data } = Astro.props;
---

<section class="mb-24">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-center">{data.headline}</h2>

    <div class="space-y-4">
      {data.faqs.map(faq => (
        <details class="bg-zinc-50 border border-zinc-200 rounded-lg p-6 cursor-pointer group">
          <summary class="font-semibold text-lg flex items-center justify-between">
            <span>{faq.question}</span>
            <span class="text-green-600 group-open:rotate-180 transition-transform">▼</span>
          </summary>
          <div class="mt-4 text-zinc-600 text-sm" style="white-space: pre-line">
            {faq.answer}
          </div>
        </details>
      ))}
    </div>

    <!-- CTA Box nach FAQs -->
    <div class="mt-12 bg-gradient-to-br from-green-50 to-blue-50 border border-green-200 rounded-lg p-8 text-center">
      <h3 class="text-xl font-bold mb-3">{data.ctaBox.title}</h3>
      <p class="text-zinc-600 mb-6">
        {data.ctaBox.description}
      </p>
      <a
        href={data.ctaBox.buttonLink}
        class="inline-block bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition"
      >
        {data.ctaBox.buttonText}
      </a>
      <p class="text-xs text-zinc-500 mt-3" set:html={data.ctaBox.note} />
    </div>

  </div>
</section>
