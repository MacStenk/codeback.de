---
// TechStack.astro - Technische Vertrauensbasis

interface Props {
  data: {
    headline: string;
    description: string;
    technologies: Array<{
      icon: string;
      title: string;
      description: string;
      badge: string;
      featured?: boolean;
    }>;
    privacyBadge: {
      icon: string;
      title: string;
      subtitle: string;
      features: Array<{
        title: string;
        description: string;
      }>;
    };
    whyNotWordPress: {
      title: string;
      description: string;
      highlight: string;
      footer: string;
    };
  };
}

const { data } = Astro.props;
---

<section class="mb-24">
  <h2 class="text-3xl font-bold mb-6">{data.headline}</h2>
  <p class="text-zinc-600 mb-8">
    {data.description}
  </p>

  <!-- Tech Grid - First 3 -->
  <div class="grid md:grid-cols-3 gap-6 mb-8">
    {data.technologies.slice(0, 3).map(tech => (
      <div class={`border rounded-lg p-6 hover:border-green-600 transition ${tech.featured ? 'border-green-600 bg-green-50' : 'border-zinc-200'}`}>
        <div class="text-3xl mb-3">{tech.icon}</div>
        <h3 class={`font-semibold mb-2 ${tech.featured ? 'text-green-900' : ''}`}>{tech.title}</h3>
        <p class={`text-sm mb-3 ${tech.featured ? 'text-green-800' : 'text-zinc-600'}`}>
          {tech.description}
        </p>
        <p class={`text-xs font-medium ${tech.featured ? 'text-green-700' : 'text-green-600'}`}>{tech.badge}</p>
      </div>
    ))}
  </div>

  <!-- Tech Grid - Next 3 -->
  <div class="grid md:grid-cols-3 gap-6 mb-8">
    {data.technologies.slice(3, 6).map(tech => (
      <div class={`border rounded-lg p-6 hover:border-green-600 transition ${tech.featured ? 'border-green-600 bg-green-50' : 'border-zinc-200'}`}>
        <div class="text-3xl mb-3">{tech.icon}</div>
        <h3 class={`font-semibold mb-2 ${tech.featured ? 'text-green-900' : ''}`}>{tech.title}</h3>
        <p class={`text-sm mb-3 ${tech.featured ? 'text-green-800' : 'text-zinc-600'}`}>
          {tech.description}
        </p>
        <p class={`text-xs font-medium ${tech.featured ? 'text-green-700' : 'text-green-600'}`}>{tech.badge}</p>
      </div>
    ))}
  </div>

  <!-- Tech Grid - Last 2 -->
  <div class="grid md:grid-cols-2 gap-6 mb-8">
    {data.technologies.slice(6).map(tech => (
      <div class={`border rounded-lg p-6 hover:border-green-600 transition ${tech.featured ? 'border-green-600 bg-green-50' : 'border-zinc-200'}`}>
        <div class="text-3xl mb-3">{tech.icon}</div>
        <h3 class={`font-semibold mb-2 ${tech.featured ? 'text-green-900' : ''}`}>{tech.title}</h3>
        <p class={`text-sm mb-3 ${tech.featured ? 'text-green-800' : 'text-zinc-600'}`}>
          {tech.description}
        </p>
        <p class={`text-xs font-medium ${tech.featured ? 'text-green-700' : 'text-green-600'}`}>{tech.badge}</p>
      </div>
    ))}
  </div>

  <!-- Privacy First Badge -->
  <div class="bg-gradient-to-br from-green-50 to-green-100 border-2 border-green-500 rounded-lg p-8">
    <div class="flex items-center gap-4 mb-4">
      <div class="text-5xl">{data.privacyBadge.icon}</div>
      <div>
        <h3 class="font-bold text-green-900 text-xl mb-1">{data.privacyBadge.title}</h3>
        <p class="text-green-800 font-medium">
          {data.privacyBadge.subtitle}
        </p>
      </div>
    </div>
    <div class="grid md:grid-cols-3 gap-4">
      {data.privacyBadge.features.map(feature => (
        <div class="bg-white rounded-lg p-4">
          <div class="flex items-start gap-2 mb-2">
            <span class="text-green-600 mt-1">âœ“</span>
            <span class="text-sm font-medium text-green-900">{feature.title}</span>
          </div>
          <p class="text-xs text-zinc-600">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>

  <!-- Info-Box -->
  <div class="mt-8 bg-zinc-900 text-white rounded-lg p-6">
    <h4 class="font-semibold mb-3">{data.whyNotWordPress.title}</h4>
    <p class="text-zinc-300 text-sm mb-4">
      {data.whyNotWordPress.description}
    </p>
    <p class="text-green-400 text-sm font-medium mb-3">
      {data.whyNotWordPress.highlight}
    </p>
    <p class="text-zinc-400 text-xs" set:html={data.whyNotWordPress.footer} />
  </div>
</section>
