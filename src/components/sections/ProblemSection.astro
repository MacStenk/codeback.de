---
// ProblemSection.astro - Der Unterschied: Pagebuilder vs. CodeBack

interface Props {
  data: {
    headline: string;
    description: string;
    pagebuilder: {
      icon: string;
      title: string;
      aiSees: string;
      negativePoints: string[];
      resultLabel: string;
      resultText: string;
    };
    codeback: {
      icon: string;
      title: string;
      aiUnderstandsTitle: string;
      aiUnderstandsSubtitle: string;
      aiUnderstandsDetails: string;
      positivePoints: string[];
      resultLabel: string;
      resultText: string;
    };
    realExample: {
      title: string;
      question: string;
      pagebuilderResponse: string;
      codebackResponse: string;
    };
    schemaExplanation: {
      title: string;
      description: string;
      benefits: Array<{
        icon: string;
        title: string;
        description: string;
      }>;
      resultTitle: string;
      resultMain: string;
      resultFooter: string;
    };
  };
}

const { data } = Astro.props;
---

<section id="problem" class="mb-24">
  <h2 class="text-3xl font-bold mb-8">{data.headline}</h2>

  <p class="text-lg text-zinc-600 mb-12">
    {data.description}
  </p>

  <!-- Vergleich -->
  <div class="grid md:grid-cols-2 gap-8">

    <!-- Pagebuilder: Unsichtbar -->
    <div class="border-2 border-red-200 rounded-lg p-8 bg-red-50/50">
      <div class="flex items-center gap-3 mb-6">
        <div class="text-3xl">{data.pagebuilder.icon}</div>
        <h3 class="text-2xl font-bold text-red-900">{data.pagebuilder.title}</h3>
      </div>

      <div class="mb-6">
        <p class="text-zinc-700 mb-4 font-medium">Was KI "sieht":</p>
        <div class="bg-white border border-red-200 rounded-lg p-4 text-zinc-500 italic">
          {data.pagebuilder.aiSees}
        </div>
      </div>

      <div class="space-y-3">
        {data.pagebuilder.negativePoints.map(point => (
          <div class="flex items-start gap-2">
            <span class="text-red-600 mt-1">✗</span>
            <p class="text-sm text-zinc-700">{point}</p>
          </div>
        ))}
      </div>

      <div class="mt-6 p-4 bg-red-100 rounded-lg border border-red-200">
        <p class="text-sm font-semibold text-red-900">{data.pagebuilder.resultLabel}</p>
        <p class="text-sm text-red-800">{data.pagebuilder.resultText}</p>
      </div>
    </div>

    <!-- CodeBack: Sichtbar -->
    <div class="border-2 border-green-500 rounded-lg p-8 bg-green-50/50">
      <div class="flex items-center gap-3 mb-6">
        <div class="text-3xl">{data.codeback.icon}</div>
        <h3 class="text-2xl font-bold text-green-900">{data.codeback.title}</h3>
      </div>

      <div class="mb-6">
        <p class="text-zinc-700 mb-4 font-medium">Was KI versteht:</p>
        <div class="bg-white border border-green-500 rounded-lg p-4">
          <p class="text-green-900 font-medium mb-2">
            {data.codeback.aiUnderstandsTitle}
          </p>
          <p class="text-zinc-700 text-sm mb-2">
            {data.codeback.aiUnderstandsSubtitle}
          </p>
          <p class="text-zinc-600 text-sm">
            {data.codeback.aiUnderstandsDetails}
          </p>
        </div>
      </div>

      <div class="space-y-3">
        {data.codeback.positivePoints.map(point => (
          <div class="flex items-start gap-2">
            <span class="text-green-600 mt-1">✓</span>
            <p class="text-sm text-zinc-700">{point}</p>
          </div>
        ))}
      </div>

      <div class="mt-6 p-4 bg-green-100 rounded-lg border border-green-500">
        <p class="text-sm font-semibold text-green-900">{data.codeback.resultLabel}</p>
        <p class="text-sm text-green-800">{data.codeback.resultText}</p>
      </div>
    </div>

  </div>

  <!-- Real-World Beispiel -->
  <div class="mt-12 bg-zinc-900 text-white rounded-lg p-8">
    <h3 class="text-xl font-bold mb-4">{data.realExample.title}</h3>
    <div class="bg-zinc-800 border border-zinc-700 rounded-lg p-6 mb-6">
      <p class="text-zinc-300 italic">
        {data.realExample.question}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <div>
        <p class="text-sm font-semibold text-red-400 mb-2">Pagebuilder-Website:</p>
        <p class="text-sm text-zinc-400">
          {data.realExample.pagebuilderResponse}
        </p>
      </div>
      <div>
        <p class="text-sm font-semibold text-green-400 mb-2">CodeBack-Website:</p>
        <p class="text-sm text-zinc-100">
          {data.realExample.codebackResponse}
        </p>
      </div>
    </div>
  </div>

  <!-- Schema.org Erklärung -->
  <div class="mt-12 bg-zinc-50 border border-zinc-200 rounded-lg p-8">
    <h3 class="text-xl font-bold mb-4">{data.schemaExplanation.title}</h3>

    <p class="text-zinc-600 mb-6">
      {data.schemaExplanation.description}
    </p>

    <div class="grid md:grid-cols-3 gap-6 mb-6">
      {data.schemaExplanation.benefits.map(benefit => (
        <div class="bg-white border border-zinc-200 rounded-lg p-6">
          <div class="text-3xl mb-3">{benefit.icon}</div>
          <h4 class="font-semibold mb-2">{benefit.title}</h4>
          <p class="text-sm text-zinc-600">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>

    <div class="bg-green-50 border border-green-200 rounded-lg p-6">
      <h4 class="font-semibold mb-3 text-green-900">{data.schemaExplanation.resultTitle}</h4>
      <p class="text-green-800 mb-4">
        {data.schemaExplanation.resultMain}
      </p>
      <p class="text-sm text-green-700">
        {data.schemaExplanation.resultFooter}
      </p>
    </div>
  </div>
</section>
