---
// FutureSection.astro - Die Zukunft der Suche

interface Props {
  data: {
    headline: string;
    searchEra: {
      timeframe: string;
      query: string;
      result: string;
    };
    answerEra: {
      timeframe: string;
      query: string;
      result: string;
    };
    criticalQuestion: {
      label: string;
      question: string;
    };
    firstMoverText: string;
  };
}

const { data } = Astro.props;
---

<section class="mb-24">
  <div class="bg-zinc-900 text-white rounded-lg p-8">
    <h2 class="text-2xl font-bold mb-4">{data.headline}</h2>

    <div class="space-y-6">
      <div>
        <p class="text-sm text-zinc-400 mb-2">{data.searchEra.timeframe}</p>
        <p class="text-lg text-zinc-300">
          {data.searchEra.query}
        </p>
        <p class="text-sm text-zinc-500 mt-2">
          {data.searchEra.result}
        </p>
      </div>

      <div class="border-t border-zinc-700 pt-6">
        <p class="text-sm text-green-400 mb-2 font-medium">{data.answerEra.timeframe}</p>
        <p class="text-lg text-green-300">
          {data.answerEra.query}
        </p>
        <p class="text-sm text-zinc-300 mt-2">
          {data.answerEra.result}
        </p>
      </div>
    </div>

    <div class="mt-8 bg-zinc-800 border border-zinc-700 rounded-lg p-6">
      <p class="text-green-400 font-semibold mb-3">{data.criticalQuestion.label}</p>
      <p class="text-zinc-100 text-lg" style="white-space: pre-line">
        {data.criticalQuestion.question}
      </p>
    </div>

    <div class="mt-6 flex items-center gap-3 text-sm">
      <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
      <p class="text-zinc-400">
        {data.firstMoverText}
      </p>
    </div>
  </div>
</section>
