---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/layout/Header.astro';
import Breadcrumbs from '../../components/layout/Breadcrumbs.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import ReadingTime from '../../components/ReadingTime.astro';
import '../../styles/global.css';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Blog' }
];
---

<!DOCTYPE html>
<html lang="de">
<head>
  <BaseHead 
    title="Blog - CodeBack" 
    description="Insights zu LLM-SEO, Answer Engine Optimization und der Zukunft der digitalen Sichtbarkeit." 
  />
</head>

<body class="bg-white text-zinc-900">
  
  <Header />

  <main class="max-w-7xl mx-auto px-6 py-12">
    
    <!-- Breadcrumbs -->
    <Breadcrumbs items={breadcrumbs} />

    <!-- Page Header -->
    <header class="mb-16">
      <h1 class="text-5xl font-bold mb-4">Blog</h1>
      <p class="text-xl text-zinc-600 max-w-2xl">
        Insights zu LLM-SEO, Answer Engine Optimization und wie Coaches 
        in der KI-Ära gefunden werden.
      </p>
    </header>

    <!-- Blog Posts Grid -->
    <section>
      {posts.length === 0 ? (
        <div class="text-center py-20">
          <p class="text-zinc-500">Noch keine Artikel veröffentlicht.</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
{posts.map((post) => (
  <article class="group">
    <a 
      href={`/blog/${post.id}/`}
      class="block"
    >
      <!-- Image -->
      {post.data.heroImage && (
        <div class="mb-4 overflow-hidden rounded-lg border border-zinc-200 aspect-video">
          <img 
            src={post.data.heroImage.src}
            alt={post.data.title}
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          />
        </div>
      )}

      <!-- Meta: Date + Reading Time -->
      <div class="flex items-center gap-3 mb-3">
        <time class="text-sm text-zinc-500">
          <FormattedDate date={post.data.pubDate} />
        </time>
        <span class="text-zinc-300">•</span>
        <ReadingTime content={post.body} />
      </div>

      <!-- Title -->
      <h2 class="text-xl font-bold mb-2 text-zinc-900 group-hover:text-green-600 transition">
        {post.data.title}
      </h2>

      <!-- Description -->
      {post.data.description && (
        <p class="text-zinc-600 text-sm line-clamp-3">
          {post.data.description}
        </p>
      )}

      <!-- Read More -->
      <div class="mt-4 text-green-600 text-sm font-medium flex items-center gap-2 group-hover:gap-3 transition-all">
        Weiterlesen
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </div>
    </a>
  </article>
))}
        </div>
      )}
    </section>

    <!-- Back to Home -->
    <footer class="mt-20 pt-12 border-t border-zinc-200 text-center">
      <a 
        href="/" 
        class="inline-flex items-center gap-2 text-zinc-600 hover:text-zinc-900 font-medium"
      >
        ← Zurück zur Homepage
      </a>
    </footer>

  </main>

  <Footer />
</body>
</html>

<style>
  /* Line clamp utility */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>