---
import "../styles/global.css";
import Footer from "../components/Footer.astro";

const pageTitle = "CodeBack - Websites für die LLM-Ära";
const pageDescription =
  "Während andere für Google optimieren, baust du für ChatGPT.";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />

    <!-- Schema.org -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: "CodeBack",
        url: "https://codeback.de",
        description: pageDescription,
        author: {
          "@type": "Person",
          name: "Steven Noack",
          url: "https://stevennoack.de",
        },
      })}
    />
  </head>

  <body class="bg-zinc-950 text-zinc-100">
    <main class="max-w-5xl mx-auto px-4">
      <!-- Hero Section -->
      <section
        class="min-h-screen flex flex-col justify-center items-center text-center py-16"
      >
        <h1
          class="text-5xl md:text-7xl font-black mb-6 bg-gradient-to-r from-green-400 to-blue-500 bg-clip-text text-transparent"
        >
          Websites für die LLM-Ära
        </h1>

        <p class="text-xl md:text-2xl text-zinc-400 mb-4">
          Während andere für Google optimieren,
        </p>
        <p class="text-2xl md:text-3xl font-semibold text-green-400 mb-12">
          baust du für ChatGPT.
        </p>

        <div class="flex gap-4 flex-wrap justify-center">
          <a
            href="#problem"
            class="px-8 py-4 bg-green-500 hover:bg-green-600 text-black font-semibold rounded-lg transition-all hover:-translate-y-1"
          >
            Warum CodeBack?
          </a>
          <a
            href="/blog"
            class="px-8 py-4 bg-zinc-800 hover:bg-zinc-700 text-zinc-100 font-semibold rounded-lg transition-all"
          >
            Blog lesen
          </a>
        </div>
      </section>

      <!-- Problem Section -->
      <section id="problem" class="py-20">
        <h2 class="text-4xl font-bold text-center mb-12">Das Problem</h2>

        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <!-- WordPress (Bad) -->
          <div class="p-8 bg-red-950/30 border border-red-900 rounded-xl">
            <h3 class="text-2xl font-semibold mb-4 text-red-400">
              WordPress (2003-2024)
            </h3>
            <ul class="space-y-3 text-zinc-300">
              <li class="flex items-center gap-2">
                <span class="text-red-500">❌</span>
                <span>Für Google optimiert</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-red-500">❌</span>
                <span>Langsam (3-8 Sekunden)</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-red-500">❌</span>
                <span>Aufgeblähter Code</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-red-500">❌</span>
                <span>LLMs können es kaum lesen</span>
              </li>
            </ul>
          </div>

          <!-- CodeBack (Good) -->
          <div class="p-8 bg-green-950/30 border border-green-900 rounded-xl">
            <h3 class="text-2xl font-semibold mb-4 text-green-400">
              CodeBack (2024+)
            </h3>
            <ul class="space-y-3 text-zinc-300">
              <li class="flex items-center gap-2">
                <span class="text-green-500">✅</span>
                <span>Für ChatGPT optimiert</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-green-500">✅</span>
                <span>Blitzschnell (&lt; 1 Sekunde)</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-green-500">✅</span>
                <span>Sauberer Code</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-green-500">✅</span>
                <span>LLMs lieben es</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Banner -->
        <div class="text-center p-8 bg-zinc-900 rounded-xl">
          <p class="text-xl text-zinc-300 mb-4">
            Die Zukunft ist nicht Google Search.
          </p>
          <p class="text-2xl font-semibold text-green-400">
            Die Zukunft ist "Ask AI".
          </p>
        </div>
      </section>

      <!-- Coming Soon -->
      <section class="py-20 text-center">
        <h2 class="text-4xl font-bold mb-6">Coming Soon</h2>
        <p class="text-xl text-zinc-400 mb-8 max-w-2xl mx-auto">
          CodeBack befindet sich in aktiver Entwicklung.<br />
          Folge dem Blog für Updates!
        </p>

        <a
          href="/blog"
          class="inline-block px-8 py-4 bg-zinc-800 hover:bg-zinc-700 text-zinc-100 font-semibold rounded-lg transition-all"
        >
          → Zum Blog
        </a>
      </section>
    </main>

    <Footer />
  </body>
</html>
