---
import "../styles/global.css";
import SEO from "../components/SEO.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/sections/Hero.astro"; // UPDATED!
import ProofSection from "../components/sections/ProofSection.astro"; // NEW!
import TargetAudience from "../components/sections/TargetAudience.astro";
import LiveDemo from "../components/sections/LiveDemo.astro";
import ProblemSection from "../components/sections/ProblemSection.astro";
import ConceptSection from "../components/sections/ConceptSection.astro";
import PricingSection from "../components/sections/PricingSection.astro";
import FutureSection from "../components/sections/FutureSection.astro";
import TechStack from "../components/sections/TechStack.astro";
import CTASection from "../components/sections/CTASection.astro";
import FAQSection from "../components/sections/FAQSection.astro";
import ChatWidget from "../components/ChatWidget.astro";

const pageTitle = "CodeBack - #1 in Google & Perplexity für LLM-Readability"; // UPDATED!
const pageDescription =
  "LLM-native Websites für Coaches & Consultants. Proven: #1 auf beiden Plattformen in 14 Tagen."; // UPDATED!
---

<!doctype html>
<html lang="de">
  <head>
    <SEO
      title={pageTitle}
      description={pageDescription}
      canonical="https://codeback.de"
      type="website"
    />

    <!-- Schema.org für LLMs - UPDATED with Cross-Platform Proof -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: "CodeBack",
        url: "https://codeback.de",
        description: pageDescription,
        author: {
          "@type": "Person",
          name: "Steven Noack",
          url: "https://stevennoack.de",
        },
        about: {
          "@type": "Service",
          name: "LLM-native Web Development",
          description:
            "Entwicklung von Websites die für Large Language Models optimiert sind. #1 in Google und Perplexity.",
        },
        awards: [
          "#1 in Google für LLM-Readability kostenlos testen",
          "#1 in Perplexity für LLM-Readability kostenlos testen",
          "Cross-Platform Dominance in 14 Tagen"
        ]
      })}
    />
  </head>

  <body class="bg-white text-zinc-900">
    <Header />

    <main id="main-content" class="max-w-4xl mx-auto px-6 py-20">
      <article>
        <!-- Hero - UPDATED with Cross-Platform Badge -->
        <Hero />

        <!-- NEW: Cross-Platform #1 Proof Section -->
        <ProofSection />

        <!-- Wer braucht das? -->
        <TargetAudience />

        <!-- Live-Demo -->
        <LiveDemo />

        <!-- Das Problem -->
        <ProblemSection />

        <!-- Das Konzept -->
        <ConceptSection />

        <!-- Die Lösung: Pricing -->
        <PricingSection />

        <!-- Die Zukunft -->
        <FutureSection />

        <!-- Tech Stack -->
        <TechStack />

        <!-- FAQ -->
        <FAQSection />

        <!-- CTA -->
        <CTASection />
      </article>
    </main>

    <Footer />
    
    <!-- ChatWidget -->
    <ChatWidget />
  </body>
</html>
